@page
@model RegisterModel2
@{
    ViewData["Title"] = "Inscription vendeur";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Créer un nouveau compte.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NomAffaires" class="form-control" autocomplete="Nom d'affaires" aria-required="true" placeholder="Nom d'affaires" />
                <label asp-for="Input.NomAffaires">Nom d'affaires</label>
                <span asp-validation-for="Input.NomAffaires" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmEmail" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.ConfirmEmail">Confirmer Email</label>
                <span asp-validation-for="Input.ConfirmEmail" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Mot de passe</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirmer mot de passe</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>    

            <div class="form-floating mb-3">
                <input asp-for="Input.SelectedNumberPoids" class="form-control" type="number" min="0" data-val="true" />
                <label asp-for="Input.SelectedNumberPoids">Poids max pour livraison (Kg)</label>
                <span asp-validation-for="Input.SelectedNumberPoids" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.SelectedNumberLivraison" class="form-control" type="number" min="0" data-val="true" />
                <label asp-for="Input.SelectedNumberLivraison">Prix pour livraison gratuite ($ CAD)</label>
                <span asp-validation-for="Input.SelectedNumberLivraison" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Input.Tax" class="form-control" aria-required="true">
                    <option value="True">True</option>
                    <option value="False">False</option>
                </select>
                <label asp-for="Input.Tax">Client doit payer taxe ?</label>
                <span asp-validation-for="Input.Tax" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Input.SelectedProvince" class="form-control" aria-required="true">
                    <option value="AB">Alberta</option>
                    <option value="BC">British Columbia</option>
                    <option value="MB">Manitoba</option>
                    <option value="NB">New Brunswick</option>
                    <option value="NL">Newfoundland and Labrador</option>
                    <option value="NS">Nova Scotia</option>
                    <option value="NT">Northwest Territories</option>
                    <option value="NU">Nunavut</option>
                    <option value="ON">Ontario</option>
                    <option value="PE">Prince Edward Island</option>
                    <option value="QC">Quebec</option>
                    <option value="SK">Saskatchewan</option>
                    <option value="YT">Yukon</option>
                </select>
                <label asp-for="Input.SelectedProvince">Sélectionner la province</label>
                <span asp-validation-for="Input.SelectedProvince" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="color: rgb(249, 229, 71); background-color: rgb(124, 105, 146)">S'enregistrer</button>
        </form>
    </div>    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
