@model Projet_Web_Commerce.Models.ModelCatalogue
@{
    PPVendeurs vendeur = Model.VendeursList.Where(p => p.NoVendeur == ViewBag.Panier[0].NoVendeur).FirstOrDefault();
}

<h1>Panier associé à @vendeur.NomAffaires</h1>
<div class="row">
    <div class="col-md-4">
        @foreach (PPArticlesEnPanier articles in ViewBag.Panier)
        {
            <div class="row">
                <p>@articles.PPProduits.Description</p>
            </div>
            
        }
    </div>
</div>
