@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Projet_Web_Commerce.Areas.Identity.Data.Utilisateur> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Vendeur"))
    {
        <head>
            <meta http-equiv="refresh" content="0; url=/PPProduits" />
        </head>        
    }
    else if (User.IsInRole("Client"))
    {
        <head>
            <meta http-equiv="refresh" content="0; url=/MainMenu" />
        </head>
    }
    else
    {
        <head>
            <meta http-equiv="refresh" content="0; url=/PPGestionnaires/ListeVendeurs" />
        </head>
    }
}
else
{
    <head>
        <meta http-equiv="refresh" content="0; url=/MainMenu" />
    </head>
}
