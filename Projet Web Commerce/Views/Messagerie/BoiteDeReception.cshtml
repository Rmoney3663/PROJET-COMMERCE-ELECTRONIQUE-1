﻿﻿@using Microsoft.AspNetCore.Identity
@using Projet_Web_Commerce.Data
@model List<PPMessages>
@inject AuthDbContext _context

@{
    ViewData["Title"] = "Boîte de réception";
}

<style>
    .truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 450px
    }

    .msg {
        color: gray;
    }

    .flotter:hover {
        background-color: rgb(236, 235, 243);
        cursor: pointer;
    }

    .email-non-lu {
        font-weight: bold; /* Texte en gras */
        color: #0000FF; /* Couleur du texte - par exemple, bleu */
        background-color: #E6E6FA; /* Couleur de fond - par exemple, lavande */
    }
</style>

<div class="row">
    <div class="col">
        <section>
            <div>
                @Html.Partial("MenuMessagerie", "BoiteDeReception")
            </div>
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">@ViewData["Title"]</h2>
                    <hr />
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Expéditeur</th>
                                <th scope="col">Objet - <span class="msg">Message</span></th>
                                <th scope="col" class="text-end">Date de l'envoi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var no = 0;
                            }
                            @foreach (var msg in Model)
                            {
                                // Assuming msg.Destinataires is loaded in the controller action
                                bool messageRead = msg.Destinataires?.Any(dest => dest.Destinataire == ViewBag.UtilisateurCourantId 
                                    && dest.MessageLu) ?? false;

                                // Adjust this line to check whether the user had read the message or not
                                string rowClass = (!messageRead && msg.TypeMessage == 0) ? "flotter email-non-lu" : "flotter";

                                <tr class="@rowClass" onclick="window.location.href = '@Url.Action("Details", new { idMessage = msg.NoMessage })'">
                                    <td>@(++no)</td>
                                    <td>@_context.Users.FirstOrDefault(u => u.Id == msg.Auteur)?.Email</td>
                                    <td class="truncate">@Html.DisplayFor(modelItem => msg.Sujet) - <span class="msg">@Html.DisplayFor(modelItem => msg.Message)</span></td>
                                    <td class="text-end">@DateTime.Now.Date</td> @* <td>@Html.DisplayFor(modelItem => msg.Message.DateMessage)</td> *@
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>
