﻿﻿@using Microsoft.AspNetCore.Identity
@using Projet_Web_Commerce.Data
@model List<PPMessages>
@inject AuthDbContext _context
@inject UserManager<Projet_Web_Commerce.Areas.Identity.Data.Utilisateur> UserManager
@inject SignInManager<Projet_Web_Commerce.Areas.Identity.Data.Utilisateur> SignInManager

@{
    ViewData["Title"] = "Boîte de réception";
}

<style>
    .truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 150px;
    }
</style>

<div class="row">
    <div class="col-md-8">
        <section>
            <div>
                @Html.Partial("MenuMessagerie", "BoiteDeReception")
            </div>
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Boîte de réception</h2>
                    <hr />
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Expéditeur</th>
                                <th scope="col">Objet</th>
                                <th scope="col">Date de l'envoi</th>
                                <th scope="col" class="ms-auto"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var no = 0;
                            }
                            @foreach (var msg in Model)
                            {
                                <tr>
                                    <td>@(++no)</td>
                                    <td>@_context.Users.Where(u => u.Id == msg.Auteur).FirstOrDefault().Email</td>
                                    <td class="truncate">@Html.DisplayFor(modelItem => msg.Sujet)</td>
                                    <td>@DateTime.Now.Date</td> @* <td>@Html.DisplayFor(modelItem => msg.Message.DateMessage)</td> *@
                                    <td class="ms-auto"><button class="ms-auto">Détails</button></td>
                                </tr>
                                
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>

