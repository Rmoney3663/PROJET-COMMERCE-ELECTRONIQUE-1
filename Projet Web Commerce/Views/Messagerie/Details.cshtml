﻿﻿@using Microsoft.AspNetCore.Identity
@using Projet_Web_Commerce.Data
@model PPMessages
@{
}

<div class="row">
    <div class="col">
        <section>
            <div>
                @Html.Partial("MenuMessagerie", "BoiteDeReception")
            </div>
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">@Model.Sujet @DateTime.Now.Date</h2>
                    <hr />
                    <p>
                        @Model.Message
                    </p>
                    @if (Model.PieceJointe != null) {
                        <img src="@Model.PieceJointe" width="300px" height="300px"/>
                    }
                </div>
            </div>
        </section>
    </div>
</div>